#include <stdio.h>
#include <string.h>

// Define a structure for Patient
struct Patient {
    int id;
    char name[50];
    int age;
    char disease[50];
    float billAmount;
};

int main() {
    int n, i;

    printf("Enter number of patients: ");
    scanf("%d", &n);


    
        printf("\nEnter details for Patient %d\n", i + 1);

        printf("Enter Patient ID: ");
        scanf("%d", &patients[i].id);

        printf("Enter Patient Name: ");
        getchar(); 
        fgets(patients[i].name, sizeof(patients[i].name), stdin);
        patients[i].name[strcspn(patients[i].name, "\n")] = '\0'; // Remove newline

        printf("Enter Patient Age: ");
        scanf("%d", &patients[i].age);

        printf("Enter Disease: ");
        getchar();
        fgets(patients[i].disease, sizeof(patients[i].disease), stdin);
        patients[i].disease[strcspn(patients[i].disease, "\n")] = '\0'; // Remove newline

        printf("Enter Bill Amount: ");
        scanf("%f", &patients[i].billAmount);
    }

  
    printf("\n===== Hospital Patient Details =====\n");
    for(i = 0; i < n; i++) {
        printf("\nPatient %d:\n", i + 1);
        printf("Patient ID   : %d\n", patients[i].id);
        printf("Name         : %s\n", patients[i].name);
        printf("Age          : %d\n", patients[i].age);
        printf("Disease      : %s\n", patients[i].disease);
        printf("Bill Amount  : %.2f\n", patients[i].billAmount);
    }

    return 0;
}

