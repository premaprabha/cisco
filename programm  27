#include <stdio.h>

int main() {
    int months, i;
    float income, expense, savings;

    printf("Enter the number of months: ");
    scanf("%d", &months);

    for (i = 1; i <= months; i++) {
        printf("\nMonth %d:\n", i);

        printf("Enter income for month %d: ", i);
        scanf("%f", &income);

        printf("Enter expenses for month %d: ", i);
        scanf("%f", &expense);

        savings = income - expense;
